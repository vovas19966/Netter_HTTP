        <GradientStop Color="{StaticResource Blue_First_Color}" Offset="0"/>
        <GradientStop Color="{StaticResource Blue_Second_Color}" Offset="1"/>
    </LinearGradientBrush>

    <Color x:Key="Yellow_First_Color" A="#ff" R="#f5" G="#dd" B="#45"/>
    <Color x:Key="Yellow_Second_Color" A="#ff" R="#fd" G="#6d" B="#0d"/>
    <SolidColorBrush x:Key="Yellow_First_Brush" Color="{StaticResource Yellow_First_Color}"/>
    <SolidColorBrush x:Key="Yellow_Second_Brush" Color="{StaticResource Yellow_Second_Color}"/>
    <LinearGradientBrush x:Key="Yellow_GradientBrush" EndPoint="1,1" StartPoint="0,0">
        <GradientStop Color="{StaticResource Yellow_First_Color}" Offset="0"/>
        <GradientStop Color="{StaticResource Yellow_Second_Color}" Offset="1"/>
    </LinearGradientBrush>

    <Color x:Key="Green_First_Color" A="#ff" R="#bb" G="#d6" B="#2a"/>
