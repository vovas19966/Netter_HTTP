        <GradientStop Color="{StaticResource Green_First_Color}" Offset="0"/>
        <GradientStop Color="{StaticResource Green_Second_Color}" Offset="1"/>
    </LinearGradientBrush>
    
    <Color x:Key="Red_First_Color" A="#ff" R="#e4" G="#44" B="#46"/>
