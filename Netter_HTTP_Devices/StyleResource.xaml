        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="StrokeThickness" Value="6"/>
        <Setter Property="Data">
            <Setter.Value>
                <PathGeometry>
                    <PathFigure StartPoint="33,0">
                        <ArcSegment Point="0,17" Size="60,40" IsLargeArc="False" SweepDirection="Clockwise" />
                        <ArcSegment Point="33,74" Size="50,60" IsLargeArc="False" SweepDirection="Counterclockwise" />
                        <ArcSegment Point="66,17" Size="50,60" IsLargeArc="False" SweepDirection="Counterclockwise" />
                        <ArcSegment Point="33,0" Size="60,40" IsLargeArc="False" SweepDirection="Clockwise" />
                        <ArcSegment Point="0,17" Size="60,40" IsLargeArc="False" SweepDirection="Clockwise" />
