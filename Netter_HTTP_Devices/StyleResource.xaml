    <SolidColorBrush x:Key="Red_First_Brush" Color="{StaticResource Red_First_Color}"/>
    <SolidColorBrush x:Key="Red_Second_Brush" Color="{StaticResource Red_Second_Color}"/>
    <LinearGradientBrush x:Key="Red_GradientBrush" EndPoint="1,1" StartPoint="0,0">
        <GradientStop Color="{StaticResource Red_First_Color}" Offset="0"/>
        <GradientStop Color="{StaticResource Red_Second_Color}" Offset="1"/>
