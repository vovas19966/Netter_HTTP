<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
<!--Color|Brush-->
    <Color x:Key="BackgroundColor" A="#ff" R="#1e" G="#1e" B="#1e"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>

    <Color x:Key="BorderColor" A="#ff" R="#e1" G="#e1" B="#e1"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

    <Color x:Key="ActiveBorderGroupColor" A="#ff" R="#00" G="#e1" B="#00"/>
    <SolidColorBrush x:Key="ActiveBorderBrush" Color="{StaticResource ActiveBorderGroupColor}"/>
    
    <Color x:Key="ImageColor" A="#ff" R="#e1" G="#e1" B="#e1"/>
    <SolidColorBrush x:Key="ImageBrush" Color="{StaticResource ImageColor}"/>
    
    <Color x:Key="ScrollViewerColor" A="#ff" R="#e1" G="#e1" B="#e1"/>
    <SolidColorBrush x:Key="ScrollViewerBrush" Color="{StaticResource ScrollViewerColor}"/>

    <Color x:Key="TextColor" A="#ff" R="#e1" G="#e1" B="#e1"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <Color x:Key="TextBorderColor" A="#ff" R="#1e" G="#1e" B="#1e"/>
    <SolidColorBrush x:Key="TextBorderBrush" Color="{StaticResource TextBorderColor}"/>
    <Color x:Key="TextTitleColor" A="#ff" R="#00" G="#ff" B="#ff"/>
    <SolidColorBrush x:Key="TextTitleBrush" Color="{StaticResource TextTitleColor}"/>
    <Color x:Key="TextIDColor" A="#ff" R="#ff" G="#00" B="#ff"/>
    <SolidColorBrush x:Key="TextIDBrush" Color="{StaticResource TextIDColor}"/>




<!-- Border Gradients -->
    <Color x:Key="Orange_First_Color" A="#ff" R="#f7" G="#a8" B="#22"/>
    <Color x:Key="Orange_Second_Color" A="#ff" R="#e8" G="#33" B="#28"/>
    <SolidColorBrush x:Key="Orange_First_Brush" Color="{StaticResource Orange_First_Color}"/>
    <SolidColorBrush x:Key="Orange_Second_Brush" Color="{StaticResource Orange_Second_Color}"/>
    <LinearGradientBrush x:Key="Orange_GradientBrush" EndPoint="1,1" StartPoint="0,0">
        <GradientStop Color="{StaticResource Orange_First_Color}" Offset="0"/>
        <GradientStop Color="{StaticResource Orange_Second_Color}" Offset="1"/>
    </LinearGradientBrush>

    <Color x:Key="Aqua_First_Color" A="#ff" R="#57" G="#f3" B="#c4"/>
    <Color x:Key="Aqua_Second_Color" A="#ff" R="#53" G="#ca" B="#e0"/>
    <SolidColorBrush x:Key="Aqua_First_Brush" Color="{StaticResource Aqua_First_Color}"/>
    <SolidColorBrush x:Key="Aqua_Second_Brush" Color="{StaticResource Aqua_Second_Color}"/>
    <LinearGradientBrush x:Key="Aqua_GradientBrush" EndPoint="1,1" StartPoint="0,0">
        <GradientStop Color="{StaticResource Aqua_First_Color}" Offset="0"/>
        <GradientStop Color="{StaticResource Aqua_Second_Color}" Offset="1"/>
    </LinearGradientBrush>

    <Color x:Key="Blue_First_Color" A="#ff" R="#43" G="#c5" B="#f6"/>
    <Color x:Key="Blue_Second_Color" A="#ff" R="#31" G="#59" B="#c4"/>
    <SolidColorBrush x:Key="Blue_First_Brush" Color="{StaticResource Blue_First_Color}"/>
    <SolidColorBrush x:Key="Blue_Second_Brush" Color="{StaticResource Blue_Second_Color}"/>
